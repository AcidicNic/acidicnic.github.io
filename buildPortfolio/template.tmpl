<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">

    <title>nicc.io
    </title>
    <meta name="description" content="Nicole's Portfolio">
    <meta name="author" content="Nicole Rocha Abadie">

    <!-- Favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="/assets/favi/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/assets/favi/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/assets/favi/favicon-16x16.png">
    <link rel="manifest" href="/assets/favi/site.webmanifest">

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
    integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <!-- My CSS -->
    <link href="./assets/base.css" rel="stylesheet">

    <!-- fontawesome -->
    <script src="https://kit.fontawesome.com/1e324e14c9.js" crossorigin="anonymous"></script>
    <!-- Ubuntu Font -->
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Ubuntu" />
</head>
<body>

    <div class="page-wrapper">
        <!-- Navbar -->
        <nav class="navbar navbar-light bg-dark justify-content-start">
            <a class="navbar-brand" href="/">
                <i class="fas fa-laptop-code h2 title-text d-inline-block align-top mt-1"></i>
                <span class="h2 title-text mx-2">nicc.io</span>
            </a>
            <div class="d-flex justify-content-start">
            <a class="btn btn_nav mr-3" href="/about">About Me</a>

            </div>
        </nav>

        <!-- Body Container -->
        <div class="content-wrapper mx-auto txt-trans w-80 mx-auto">
            <h1 class="text-black text-center">Projects:</h1>

            {{ range .Projects }}
            <div class="mx-auto text-center mb-2">
                <div class="d-flex flex-wrap align-items-baseline justify-content-center">
                    <a class="txt-solid-hover no-ul mb-0 h4 d-block" href="{{ .Url }}">{{ .Title }}</a>
                    <span class="ml-2"><small>{{ .Desc }}</small></span>
                </div>
            </div>
            {{ end }}

            <div class="w-50 bg-trans horiz-line mx-auto my-4"></div>

            <h1 class="text-black text-center">Articles:</h1>

            {{ range .Articles }}
            <div class="mx-auto text-center mb-2">
                <div class="d-flex flex-wrap align-items-baseline justify-content-center">
                    <a class="txt-solid-hover no-ul mb-0 h4" href="{{ .Url }}" target="_blank">{{ .Title }}</a>
                    <span class="ml-2"><small>{{ .Desc }}</small></span>
                </div>
            </div>
            {{ end }}

        </div>
    </div>

    <footer id="footer" class="w-100 text-center bg-dark">
        <div class="h-100 d-flex justify-content-center align-items-center">
            {{ range .Footer }}
            <a class="footer_text mx-2 no-ul" href="{{ .Url }}" target="_blank">
                <i class="{{ .Title }}"></i> {{ .Desc }}
            </a>
            {{ end }}
        </div>
    </footer>

    <!-- jQuery, Popper, and Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
</body>
</html>
